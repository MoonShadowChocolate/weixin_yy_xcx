  },
  // 取消预约单
  cancelAppoint: function (e) {
    var that = this;
    wx.showModal({
      title: '提示',
      content: '确定取消？',
      success: function (res) {
        if (res.confirm) {
          app.request(app.host + 'appointment/cancel/' + app.appid + '/' + app.openid, 'POST', 'form', {
            shopId: wx.getStorageSync('businessId'),
