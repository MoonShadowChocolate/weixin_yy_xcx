      }
    })
  },
  // 取消订单
  cancel: function (e) {
    var that = this;
    wx.showModal({
      title: '提示',
      content: '确定取消订单？',
      success: function (re) {
        if (re.confirm) {
          app.request(app.host + 'order/rejected/cancelOrder4App/' + app.appid + '/' + app.openid, 'POST', 'form', {
