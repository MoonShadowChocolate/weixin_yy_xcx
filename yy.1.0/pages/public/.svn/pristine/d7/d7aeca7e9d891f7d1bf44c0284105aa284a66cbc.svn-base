/* pages/cardDetails/cardDetails.wxss */
@import "/template/getMember/getMember";
.content{
  width: 100%;
  height: auto;
  overflow: hidden;
  background-color: #F4F4F4;
}
.cardInfoBox{
  width: 100%;
  height: auto;
  background-color: #fff;
  padding: 30rpx 40rpx 30rpx 40rpx;
  box-sizing: border-box;
}
.cardList{
  width: 670rpx;
  height: 306rpx;
  border-radius: 20rpx;
  margin: 0 auto;
  overflow: hidden;
}
.cardTop{
  width: 100%;
  height: 64rpx;
}
.cardCnt{
  width: 100%;
  height: 242rpx;
}
.cardCntItem{
  width: 610rpx;
  height: 121rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-left: 30rpx;
  padding-right: 30rpx;
  color: #333;
}
.cardTitle{
  width: 400rpx;
  font-size: 32rpx;
  padding-top: 60rpx;
  box-sizing: border-box;
}
.cardPrice{
  width: 210rpx;
  font-size: 76rpx;
  text-align: right;
  padding-top: 40rpx;
  box-sizing: border-box;
}
.cardPrice text{
  font-size: 32rpx;
}
.effectiveDate{
  width: 400rpx;
  font-size: 28rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.cardName{
  font-size: 30rpx;
  color: #333;
  margin-top: 50rpx;
}
.cardBottomPrice{
  font-size: 28rpx;
  margin-top: 20rpx;
}
.useExplain{
  width: 100%;
  height: auto;
  background-color: #fff;
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #333;
  word-wrap:break-word;
  padding: 30rpx 40rpx 20rpx 40rpx;
  box-sizing: border-box;
  margin-bottom: 1rpx;
}
.cardTabBtn{
  width: 100%;
  height: 108rpx;
  background-color: #fff;
  box-shadow: 4rpx 0rpx 15rpx RGBA(180, 180, 180, 0.2);
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
  display: flex;
  flex-direction: row;
}
.callBtn{
  width: 50%;
  height: 108rpx;
  text-align: center;
  line-height: 138rpx;
}
.callBtn image{
  width: 54rpx;
  height: 54rpx;
}
.payCardBtn{
  width: 342rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  line-height: 80rpx;
  margin: auto 0;
}