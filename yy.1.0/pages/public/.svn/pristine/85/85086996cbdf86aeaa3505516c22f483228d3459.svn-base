/* pages/changeStore/changeStore.wxss */
page{
  background: #f4f4f4;
}
.changeStore-list{
  overflow: hidden;
}
.changeStore-item{
  margin-bottom: 22rpx;
  background: white;
}
.changeStore-item-top{
  border-bottom: 1px solid #E5E5E5;
  padding: 0 20rpx;
  overflow: hidden;
}
.changeStore-item-top-title{
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  align-items: center;
}
.citt-left{
  max-width: 500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 32rpx;
  font-weight: bold;
}
.citt-right{
  color: #FF8A2C;
  font-size: 28rpx;
}
.changeStore-item-top-detail{
  font-size: 26rpx;
  line-height: 1.5;
}
.changeStore-item-top-time{
  font-size: 26rpx;
  line-height: 1.5;
  padding-bottom: 20rpx;
}
.changeStore-item-bottom{
  display: flex;
  align-items: top;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
}
.changeStore-item-bottom-phone,.changeStore-item-bottom-address{
  width: 50%;
  position: relative;
}
.changeStore-item-bottom-phone::after{
  content: '';
  position: absolute;
  width: 2rpx;
  height: 60%;
  top: 20%;
  left: 100%;
  background: #E5E5E5;
}
.changeStore-item-bottom-icon{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.changeStore-item-bottom-txt{
  vertical-align: middle;
  font-size: 28rpx;
}
.changeStore-location{
  margin-top: 66rpx;
  font-size: 28rpx;
  text-align: center;
  padding: 0 40rpx;
  line-height: 1.5;
}
.ciba-button{
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
  left: 0;
  top: 0;
}