/* pages/coupon/coupon.wxss */
 @import "/template/getMember/getMember";
.coupon-list{
  padding: 0 40rpx;
  color: white;
  padding-top: 60rpx;
}
.coupon-item{
  width: 100%;
  height: 224rpx;
  padding: 0 40rpx;
  border-radius: 12rpx;
  box-sizing: border-box;
  position: relative;
  background: linear-gradient(to right,#FC9340,#FC2B95);
  overflow: hidden;
  margin-bottom: 40rpx;
}
.coupon-item::before{
  content: '';
  position: absolute;
  width: 10rpx;
  height: 20rpx;
  border-radius: 0 100% 100% 0/0 50% 50% 0;
  background: white;
  left: 0;
  bottom:50rpx;
}
.coupon-item::after{
  content: '';
  position: absolute;
  width: 10rpx;
  height: 20rpx;
  border-radius:  100% 0 0 100% /50% 0 0 50%;
  background: white;
  right: 0;
  bottom:50rpx;
}
.coupon-item-top{
  display: flex;
  align-items: center;
  justify-content: space-between;
  line-height: 1;
  position: relative;
  margin: 44rpx 0;
}
.coupon-item-top-left{
  font-size: 46rpx;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.coupon-item-top-right{
  min-width: 180rpx;
  text-align: center;
}
.citr-left{
  font-size: 32rpx;
  vertical-align: bottom;
}
.citr-right{
  font-size: 60rpx;
  vertical-align: bottom;
}
.citr-sale{
  font-size: 32rpx;
  vertical-align: bottom;
}
.coupon-item-bottom{
  display: flex;
  justify-content: space-between;
}
.coupon-item-bottom-left{
  font-size: 24rpx;
}
.cibl-limit{
  height: 32rpx;
}
.coupon-item-bottom-right{
  font-size: 32rpx;
  height: 66rpx;
  width: 180rpx;
  text-align: center;
  background: white;
  border-radius: 34rpx;
  line-height: 66rpx;
}
.cibr-txt{
  height: 100%;
}
.cibr-txt-top{
  font-size: 26rpx;
  line-height: 1.5;
}
.cibr-txt-bottom{
  font-size: 22rpx;
  line-height: 1;
}
.coupon-item-top-rest{
  font-size: 20rpx;
  position: absolute;
  top:100%;
  left: 0;
}
.coupon-item-top-right_user{
  position: absolute;
  top: 50%;
  right:82rpx;
  transform: translateY(-50%);
}
.coupon-alert{
  display: block;
}
.coupon-alert-back{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: black;
  opacity: .5;

}
.coupon-alert-content{
  position: fixed;
  width: 604rpx;
  left:50%;
  top: 40%;
  transform: translate(-50%,-50%);
  background: white;
  color: #333;
  border-radius: 10rpx;
  line-height: 1;
}
.coupon-alert-content-top{
  padding: 70rpx 80rpx 44rpx;
  text-align: center;
  border-bottom: 1rpx solid #D8D8D8;
}
.cact-txt{
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.cact-tips{
  font-size: 24rpx;
  color: #FF4646;
}
.coupon-alert-content-bottom{
  height: 90rpx;
  display: flex;
}
.cacb-but{
  height: 100%;
  line-height: 90rpx;
  text-align: center;
  font-size: 34rpx;
  width: 50%;
}
.cacb-cance{

}
.cacb-confirm{
  color: #2FB823;
  border-left: 1rpx solid #D8D8D8;
}