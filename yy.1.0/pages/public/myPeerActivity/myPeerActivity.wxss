/* pages/myPeerActivity/myPeerActivity.wxss */
 @import "/template/getMember/getMember";
.content{
  width: 100%;
  height: auto;
  overflow: hidden;
  padding-top: 50rpx;
  box-sizing: border-box;
}
.peerActivityTop{
  width: 670rpx;
  height: 460rpx;
  border-radius: 20rpx;
  padding-top: 50rpx;
  box-sizing: border-box;
  box-shadow: 0rpx 0rpx 20rpx RGBA(194, 194, 194, 0.25);
  margin: 0 auto; 
}
.peerActivityImg{
  width: 590rpx;
  height: 282rpx;
  border-radius: 20rpx;
  overflow: hidden;
  margin: 0 auto;
}
.peerActivityImg image{
  width: 590rpx;
  height: 282rpx;
}
.peerActivityTip{
  width: 100%;
  margin-top: 40rpx;
  font-size: 32rpx;
  color: #333;
  text-align: center;
}
/* 同行活动进度条 start */
.peerDiscountBarBox{
  width: 100%;
  height: 200rpx;
  margin-top: 170rpx;
}
.peerDiscountBar{
  width: 540rpx;
  height: 4rpx;
  background-color: #E5E5E5;
  margin: 0 auto;
  margin-top: 60rpx;
  position: relative;
}
.peerDiscountBarSle{
  height: 4rpx;
}
.peerMarkList{
  width: 540rpx;
  height: 32rpx;
  position: absolute;
  top:-16rpx;
  left: 0;
  display: flex;
  justify-content: space-between;
}
.peerMarkItem{
  width: 22rpx;
  height: 22rpx;
  border-radius: 50%;
  position: relative;
}
.peerMarkInfo{
  width: 120rpx;
  height: 100rpx;
  position: absolute;
  top:64rpx;
  left:-44rpx;
  font-size: 24rpx;
  text-align: center;
}
.peerMarkInfoTop{
  width: 100%;
  color: #333;
}
.peerMarkInfoBottom{
  width: 100%;
  margin-top: 15rpx;
}
/* 同行活动进度条 end */
.joinSharePeerBtn{
  width: 520rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  color: #333;
  text-align: center;
  line-height: 80rpx;
  margin: 0 auto;
  margin-top: 120rpx;
  position: relative;
}
.joinSharePeerBtn button{
  width: 520rpx;
  height: 80rpx;
  opacity: 0;
  position: absolute;
  top:0;
  left:0;
}