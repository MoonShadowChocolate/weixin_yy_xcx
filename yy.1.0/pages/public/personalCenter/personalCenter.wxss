/* pages/personalCenter/personalCenter.wxss */
 @import "/template/getUserInfo/getUserInfo"; 
.personalCenter-background{
  width: 100%;
  height: 225rpx;
  background: rgb(255, 226, 0);
  border-bottom-left-radius: 60% 30%;
  border-bottom-right-radius: 60% 30%; 
  position: absolute;
  z-index: -1;
  left: 0;
  top: 0;
}
.personalCenter-content{
  padding: 24rpx 40rpx 0;
}
.personalCenter-content-box{
  border-radius: 20rpx;
  box-shadow: 0 1px 15px rgba(194, 194, 194, .25);
  margin-bottom: 50rpx;
  overflow: hidden;
  background: white;
}
.personalCenter-content-box-user{
  margin-top: 26rpx;
  font-size: 0;
  overflow: hidden;
}
.pcbu-box{
  float: left;
  margin-right: 26rpx;
  margin-left: 36rpx;
  position: relative;
}
.pcbu-box-button{
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
  left: 0;
  top: 0;
}
.pcbu-icon{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.pcbu-status{
  overflow: hidden;
  line-height: 1;
}
.pcbu-status-name{
  font-size: 32rpx;
  margin-bottom: 20rpx;
  margin-top: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.pcbu-status-number{
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.personalCenter-content-box-useritem{
  display: flex;
  justify-content: space-around;
  align-items: flex-start;
}
.pcbu-item{
  line-height: 1;
  text-align: center;
  padding: 28rpx 0;
}
.pcbu-item-num{
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 18rpx;
}
.pcbu-item-txt{
  font-size: 26rpx;
}
.personalCenter-content-box-myAppointment{
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 20rpx 0;
  font-size: 0;
}
.pcbm-left-stick{
  display: inline-block;
  vertical-align: middle;
  width: 6rpx;
  height: 28rpx;
  background: #333333;
  border-radius: 10rpx;
}
.pcbm-left-txt{
  vertical-align: middle;
  margin-left: 12rpx;
  font-size: 28rpx;
  line-height: 1;
}
.pcbm-right-txt{
  vertical-align: middle;
  font-size: 24rpx;
  margin-right: 18rpx;
  line-height: 1;
}
.pcbm-right-arrow{
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
}
.personalCenter-content-box-appointmentItems{
  display: flex;
  justify-content: space-around;
  height: 186rpx;
  align-items: center;
}
.pcba-item{
  line-height: 1;
  font-size: 0;
}
.pcba-item-icon{
  width: 74rpx;
  height: 74rpx;
}
.pcba-item-txt{
  font-size: 24rpx;
  margin-top: 18rpx;
}
.personalCenter-content-box-menu{
  padding: 20rpx 0;
}
.pcbme-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  padding: 0 20rpx;
  border-bottom: 1px solid #e5e5e5;
}
.pcbme-item-left{
  font-size: 0;
  line-height: 1;
}
.pcbme-item-left-icon{
  width: 54rpx;
  height: 54rpx;
  margin-right: 16rpx;
  vertical-align: middle;
}
.pcbme-item-left-txt{
  font-size: 28rpx;
  vertical-align: middle;
}
.pcbme-item-arrow{
  width: 20rpx;
  height: 20rpx;
}
.personalCenter-content-box-curappoint{
  padding: 42rpx 24rpx 42rpx 30rpx;
  line-height: 1;
}
.pcbc-top{
  margin-bottom: 22rpx;
  display: flex;
  justify-content: space-between;
}
.pcbc-top-left{
  max-width: 480rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
}
.pcbc-top-right{
  color: #FF4646;
  font-size: 26rpx;
}
.pcbc-middle{
  color: #3B85FF;
  font-size: 26rpx;
  margin-bottom: 40rpx;
}
.pcbc-bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.pcbc-bottom-left{
  font-size: 26rpx;
  max-width: 480rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.pcbc-bottom-right{
  color: #FF8A2C;
  border:1px solid #FF8A2C;
  font-size: 24rpx;
  padding: 14rpx 16rpx;
  border-radius: 26rpx;
}